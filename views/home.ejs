<%- include("partials/header.ejs") %>

<div class="main-container">
  <h1><%= hDefault %></h1>
  <p><%= pDefault %></p>

  <% allPosts.forEach((element) => { %>
  <h2><%= element.title %></h2>
  <p>
    <%= element.post.slice(0, 100) + " ..." %>
    <a href="/posts/<%= element.title %>">Read More</a>
  </p>

  <% }); %>
</div>
